{
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "TodoApp": {
        "ClusterId": "TodoApp",
        "Match": {
          "Path": "{**catch-all}",
          "Methods": [
            "GET",
            "POST",
            "PUT",
            "DELETE"
          ]
        }
      },
      "TodoApi": {
        "ClusterId": "TodoApi",
        "AuthorizationPolicy": "app",
        "CorsPolicy": "app",
        "Match": {
          "Path": "/todos/{**remainder}",
          "Methods": [
            "GET",
            "POST",
            "PUT",
            "DELETE"
          ]
        }
      },
      "NotificationService": {
        "ClusterId": "NotificationService",
        "AuthorizationPolicy": "app",
        "CorsPolicy": "app",
        "Match": {
          "Path": "/notifications/{**remainder}",
          "Methods": [
            "GET",
            "POST",
            "PUT",
            "DELETE"
          ]
        }
      },
      "Grafana": {
        "ClusterId": "Grafana",
        "Match": {
          "Path": "/grafana/{**remainder}",
          "Methods": [
            "GET",
            "POST",
            "PUT",
            "DELETE"
          ]
        }
      }
    },
    "Clusters": {
      "TodoApp": {
        "Destinations": {
          "TodoApp": {
            "Address": "__ENV__"
          }
        }
      },
      "TodoApi": {
        "Destinations": {
          "TodoApi": {
            "Address": "__ENV__"
          }
        }
      },
      "NotificationService": {
        "Destinations": {
          "NotificationService": {
            "Address": "__ENV__"
          }
        }
      },
      "Grafana": {
        "Destinations": {
          "Grafana": {
            "Address": "__ENV__"
          }
        }
      }
    }
  },
  "Cors": {
    "Origins": "__ENV__"
  },
  "Auth": {
    "Audience": "__ENV__",
    "Authority": "__ENV__",
    "MetadataAddress": "__ENV__",
    "ValidIssuers": "__ENV__"
  }
}