{
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "todos": {
        "RouteId": "todos",
        "ClusterId": "todos",
        "AuthorizationPolicy": "app",
        "CorsPolicy": "app",
        "Match": {
          "Path": "/todos/{**remainder}",
          "Methods": [
            "GET",
            "POST"
          ]
        }
      },
      "grafana": {
        "RouteId": "grafana",
        "ClusterId": "grafana",
        "Match": {
          "Path": "/grafana/{**remainder}",
          "Methods": [
            "GET",
            "POST",
            "PUT",
            "DELETE"
          ]
        }
      }
    },
    "Clusters": {
      "todos": {
        "Destinations": {
          "todos": {
            "Address": "__ENV__"
          }
        }
      },
      "grafana": {
        "Destinations": {
          "grafana": {
            "Address": "__ENV__"
          }
        }
      }
    }
  },
  "Cors": {
    "Origins": "__ENV__"
  },
  "Auth": {
    "Audience": "__ENV__",
    "Authority": "__ENV__",
    "MetadataAddress": "__ENV__",
    "ValidIssuers": "__ENV__"
  }
}
