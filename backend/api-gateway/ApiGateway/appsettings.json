{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "todos": {
        "RouteId": "todos",
        "ClusterId": "todos",
        "CorsPolicy": "default",
        "Match": {
          "Path": "/todos/{**remainder}",
          "Methods": [
            "GET",
            "POST"
          ]
        }
      }
    },
    "Clusters": {
      "todos": {
        "Destinations": {
          "todo-api": {
            "Address": "http://todo-api:8081"
          }
        }
      }
    }
  }
}
