{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "todo": {
      "description": "Todo",
      "type": "object",
      "properties": {
        "name": {
          "description": "Todo's name",
          "type": "string",
          "minLength": 1,
          "maxLength": 100
        },
        "description": {
          "anyOf": [
            {
              "description": "Todo's description",
              "type": "string",
              "minLength": 1,
              "maxLength": 1000
            },
            { "type": "null" }
          ]
        }
      },
      "required": ["name"]
    }
  },
  "required": ["todo"]
}
